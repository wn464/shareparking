<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.dao.IUserDao">
    <select id="findByUserName" resultType="UserBean">
        select u.id,u.username,u.password,u.name,u.img,m.name,u.phonenumber,u.email,a.name rank
        from user u left join mark m
        on u.gender = m.id
        left join authority a
        on u.a_id = a.id
        where u.username = #{username}
    </select>

    <select id="findAll" resultMap="map">
        select * from user where id != #{id}
    </select>
    <resultMap id="map" type="UserBean">
        <id property="id" column="id" />
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>
</mapper>